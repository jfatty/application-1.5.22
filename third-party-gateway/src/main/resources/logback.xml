<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8"> 
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] -%c{5}.%M[%L] %-5level - %msg%n</pattern>
        </encoder>
    </appender>
	<root level="debug">
		<appender-ref ref="stdout" />
	</root>
</configuration>